<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txv_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://example.com/shortened"
        android:textColor="@android:color/holo_blue_dark"
        android:autoLink="web" />

    <TextView
        android:id="@+id/txv_urlOriginal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Original: http://example.com/very/long/original/url"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txv_vencimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Vencimiento: [date and time]"
        android:textSize="12sp" />

</LinearLayout>